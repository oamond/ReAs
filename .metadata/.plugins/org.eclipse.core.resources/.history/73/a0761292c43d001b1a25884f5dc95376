
public class CarPart implements Functional {
	
	protected int condition;
	
	public CarPart() {
		
		condition = 0;
	}
	
	public CarPart(int condition) {
		
		this.condition = condition;
	}
	
	public void status() {
		
		if(condition>0)
			System.out.println(this.getClass().getSimpleName() + "is still durable");
		
		else
			System.out.println(this.getClass().getSimpleName() + "has broken");
	}
	
	public void function() {
		
		System.out.println("The Condition value of CarPart is:" +condition);
	}
	

}
